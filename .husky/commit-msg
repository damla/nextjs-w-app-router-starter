#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# example: [#61]feat: add new avatar
if ! head -1 "$1" | grep -qE "^(\[.+?\])?(feat|fix|chore|docs|test|style|refactor|perf|build|ci|revert): .{1,}$"; then
    echo "ðŸš¨ Aborting commit. Your commit message is invalid. ðŸ§" >&2
    exit 1
fi
if ! head -1 "$1" | grep -qE "^.{1,88}$"; then
    echo "ðŸš¨ Aborting commit. Your commit message is too long. âœ‚ï¸" >&2
    exit 1
fi